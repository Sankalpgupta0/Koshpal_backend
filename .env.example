# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:5173,http://localhost:5174

# Database Configuration
# Replace with your local database credentials
DATABASE_URL="postgresql://username:password@localhost:5432/koshpal"
SHADOW_DATABASE_URL="postgresql://username:password@localhost:5432/koshpal_shadow"

# Production Database (DO NOT USE IN DEVELOPMENT)
# DATABASE_URL="postgresql://postgres.brzjqvszfuofextrkgfe:!7RpW9v8LaJnJdP@aws-1-ap-south-1.pooler.supabase.com:5432/postgres?connection_limit=30&pool_timeout=20"

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# SMTP Configuration (Use app-specific passwords for Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your_app_specific_password

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REFRESH_TOKEN=your_google_refresh_token